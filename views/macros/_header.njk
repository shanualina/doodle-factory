            <li>
              <a href="/about" class="nav-link animsition-link" data-animsition-out-class="fade-out" data-text="about">about</a>
            </li>
            <li>
              <a href="/shop" class="nav-link animsition-link" data-animsition-out-class="fade-out" data-text="shop">shop</a>
            </li>
            <li>
              <a href="/cart" class="nav-link animsition-link" data-animsition-out-class="fade-out" data-text="cart">cart</a>
            </li>
            <li>
              <a href="/contact" class="nav-link animsition-link" data-animsition-out-class="fade-out" data-text="contact">contact</a>
            </li>
          </ul>
        </nav>
      {% endif %}
    </div>
    <div class="hide-menu a-nav-toggle"></div>
    <div class="menu">
      <div class="menu-main" id="accordion">
        <ul>
          <li class="active">
            <a data-text="Home" class="animsition-link" data-animsition-out-class="fade-out" href="/">Home</a>
          </li>
          <li>
            <a data-text="Classes" href="/classes" class="animsition-link" data-animsition-out-class="fade-out">Classes</a>
          </li>
          <li>
            <a data-text="Illustrations" class="animsition-link" data-animsition-out-class="fade-out" href="/illustrations">
