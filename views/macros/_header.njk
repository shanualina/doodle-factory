      </a>
      {% if (topmenu) %}
        <nav class="navbar-nav d-none d-md-block">
          <ul>
            <li class="active">
              <a href="/classes" class="nav-link animsition-link" data-animsition-out-class="fade-out" data-text="classes">
              classes</a>
            </li>
            <li>
              <a
                href="/illustrations"
                class="nav-link animsition-link"
                data-animsition-out-class="fade-out"
                data-text="illustrations">illustrations</a>
